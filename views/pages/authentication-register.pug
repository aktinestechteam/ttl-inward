									.input-group.mb-3
										.input-group-prepend
											span#basic-addon1.input-group-text.bg-danger.text-white
												i.ti-email
										input.form-control.form-control-lg(type='text', placeholder='Email Address', aria-label='Username', aria-describedby='basic-addon1', required='')
									.input-group.mb-3
										.input-group-prepend
											span#basic-addon2.input-group-text.bg-warning.text-white
												i.ti-pencil
										input.form-control.form-control-lg(type='text', placeholder='Password', aria-label='Password', aria-describedby='basic-addon1', required='')
									.input-group.mb-3
										.input-group-prepend
											span#basic-addon2.input-group-text.bg-info.text-white
												i.ti-pencil
										input.form-control.form-control-lg(type='text', placeholder=' Confirm Password', aria-label='Password', aria-describedby='basic-addon1', required='')
							.row.border-top.border-secondary
								.col-12
									.form-group
										.p-t-20
											button.btn.btn-block.btn-lg.btn-info(type='submit') Sign Up
