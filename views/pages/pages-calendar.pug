extends ../layouts/matrix_layout.pug

block variables
	- var activePage = 'blank-page'
	- var activeGroup = 'pages'
	link(href='/libs/fullcalendar/dist/fullcalendar.min.css', rel='stylesheet')
	link(href='/extra-libs/calendar/calendar.css', rel='stylesheet')


block content
	// ==============================================================
	// Bread crumb and right sidebar toggle
	// ==============================================================
	.page-breadcrumb
		.row
			.col-12.d-flex.no-block.align-items-center
				h4.page-title Calendar
				.ml-auto.text-right
					nav(aria-label='breadcrumb')
						ol.breadcrumb
							li.breadcrumb-item
								a(href='#') Home
							li.breadcrumb-item.active(aria-current='page') Library
	// ==============================================================
	// End Bread crumb and right sidebar toggle
	// ==============================================================
	// ==============================================================
	// Container fluid
	// ==============================================================
	.container-fluid
		// ==============================================================
		// Start Page Content
		// ==============================================================
		.row
			.col-md-12
				.card
					div
						.row
							.col-lg-3.border-right.p-r-0
								.card-body.border-bottom
									h4.card-title.m-t-10 Drag & Drop Event
								.card-body
									.row
										.col-md-12
											#calendar-events
												.calendar-events.m-b-20(data-class='bg-info')
													i.fa.fa-circle.text-info.m-r-10
													| Event One
												.calendar-events.m-b-20(data-class='bg-success')
													i.fa.fa-circle.text-success.m-r-10
													|  Event Two
												.calendar-events.m-b-20(data-class='bg-danger')
													i.fa.fa-circle.text-danger.m-r-10
													| Event Three
												.calendar-events.m-b-20(data-class='bg-warning')
													i.fa.fa-circle.text-warning.m-r-10
													| Event Four
											// checkbox
											.custom-control.custom-checkbox
												input#drop-remove.custom-control-input(type='checkbox')
												label.custom-control-label(for='drop-remove') Remove after drop
											a.btn.m-t-20.btn-info.btn-block.waves-effect.waves-light(href='javascript:void(0)', data-toggle='modal', data-target='#add-new-event')
												i.ti-plus
												|  Add New Event
							.col-lg-9
								.card-body.b-l.calender-sidebar
									#calendar
		// BEGIN MODAL
		#my-event.modal.none-border
			.modal-dialog
				.modal-content
					.modal-header
						h4.modal-title
							strong Add Event
						button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
					.modal-body
					.modal-footer
						button.btn.btn-secondary.waves-effect(type='button', data-dismiss='modal') Close
						button.btn.btn-success.save-event.waves-effect.waves-light(type='button') Create event
						button.btn.btn-danger.delete-event.waves-effect.waves-light(type='button', data-dismiss='modal') Delete
		// Modal Add Category
		#add-new-event.modal.fade.none-border
			.modal-dialog
				.modal-content
					.modal-header
						h4.modal-title
							strong Add
							|  a category
						button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
					.modal-body
						form
							.row
								.col-md-6
									label.control-label Category Name
									input.form-control.form-white(placeholder='Enter name', type='text', name='category-name')
								.col-md-6
									label.control-label Choose Category Color
									select.form-control.form-white(data-placeholder='Choose a color...', name='category-color')
										option(value='success') Success
										option(value='danger') Danger
										option(value='info') Info
										option(value='primary') Primary
										option(value='warning') Warning
										option(value='inverse') Inverse
					.modal-footer
						button.btn.btn-danger.waves-effect.waves-light.save-category(type='button', data-dismiss='modal') Save
						button.btn.btn-secondary.waves-effect(type='button', data-dismiss='modal') Close
		// END MODAL
		// ==============================================================
		// End PAge Content
		// ==============================================================
	// ==============================================================
	// End Container fluid
	// ==============================================================
	// ==============================================================
	// footer
	// ==============================================================
	footer.footer.text-center
		| All Rights Reserved by #{sails.config.globals.customer_name} Designed and Developed by 
		a(href='https://mobigic.com') Mobigic Technologies Pvt Ltd
		| .
	// ==============================================================
	// End footer
	// ==============================================================

block specific-js
	script(src='/libs/moment/min/moment.min.js')
	script(src='/libs/fullcalendar/dist/fullcalendar.min.js')
	script(src='/dist/js/pages/calendar/cal-init.js')
	script(type='text/javascript').